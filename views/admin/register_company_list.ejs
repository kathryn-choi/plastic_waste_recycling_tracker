<script>
    
    function accpetcomp(comp_index,pending_type){
    $.ajax({
      url:"/admin/accept_comp",
      method: "POST",
      data : {
        comp_index : comp_index,
        pending : pending_type
      },
      success : function (data) {
          if(data.success == true){
              if(!alert('회사 등록 성공')){
                  window.location.reload();  
              }
          }
          if(data.success == false){
              if(!alert("회사 등록 실패")){
                  window.location.reload();  
              }
          }
      }
    });
  }
</script>
